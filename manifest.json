{
  "manifest_version": 3,
  "name": "RateFlix",
  "version": "0.1",
  "description": "Adds IMDb scores to streaming services using omdb",
  "content_scripts": [
    {
      "matches": ["*://www.netflix.com/*"],
      "js": ["netflix.bc.js"]
    },
    {
      "matches": ["*://www.amazon.com/*/video/*", "*://www.primevideo.com/*"],
      "js": ["prime.bc.js"]
    },
    {
      "matches": ["*://play.max.com/*"],
      "js": ["hbomax.bc.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [ "storage", "tabs", "activeTab" ]
}
